{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "headers": [
      {
        "source": "/(fr|en)/(account|m/.*)",
        "headers": [
          { "key": "Cache-Control", "value": "no-store" },
          { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
          { "key": "X-Content-Type-Options", "value": "nosniff" },
          { "key": "X-Frame-Options", "value": "DENY" },
          { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
        ]
      },
      {
        "source": "/api/(checkout/confirm|auth/(login|logout))",
        "headers": [
          { "key": "Cache-Control", "value": "no-store" },
          { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
          { "key": "X-Content-Type-Options", "value": "nosniff" },
          { "key": "X-Frame-Options", "value": "DENY" },
          { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
        ]
      }
    ],
    "redirects": [
      { "source": "http://parcelsoftime.com/:path*", "destination": "https://parcelsoftime.com/:path*", "permanent": true },
      { "source": "http://www.parcelsoftime.com/:path*", "destination": "https://www.parcelsoftime.com/:path*", "permanent": true }
    ]
  }
  